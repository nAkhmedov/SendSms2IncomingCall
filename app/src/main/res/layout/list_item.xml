<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:padding="10dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sms_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addContactButton"
        android:layout_toStartOf="@+id/addContactButton"
        android:textDirection="rtl"
        android:text="Number" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sms_number"
        android:layout_toLeftOf="@+id/addContactButton"
        android:layout_toStartOf="@+id/addContactButton"
        android:textDirection="rtl"
        android:text="Sent on " />

    <ImageButton
        android:id="@+id/addContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:clickable="false"
        android:src="@drawable/ic_content_new"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:contentDescription=""/>

</RelativeLayout>