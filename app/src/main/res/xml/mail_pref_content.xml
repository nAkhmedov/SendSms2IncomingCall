<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:key="pref_screen_root"
                  android:icon="@mipmap/ic_launcher">

    <PreferenceCategory
        android:key="mail"
        android:title="@string/mail">

        <EditTextPreference
            android:key="mail_name"
            android:hint="@string/type_here"
            android:title="@string/mail_name"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:key="mail_color_code"
            android:title="@string/color"
            app:colorpicker_defaultColor="#f00"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:key="mail_color_icon_code"
            android:title="@string/color_icons"
            app:colorpicker_defaultColor="#f00"/>

        <EditTextPreference
            android:key="mail_label"
            android:hint="@string/type_here"
            android:title="@string/mail_label"/>

        <CheckBoxPreference
            android:key="if_mail"
            android:title="@string/show"
            android:defaultValue="false"/>

    </PreferenceCategory>


</PreferenceScreen>
