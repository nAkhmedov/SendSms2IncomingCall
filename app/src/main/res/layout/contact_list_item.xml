<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:padding="10dp">

    <ImageView
        android:id="@+id/contactPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_social_person"
        android:contentDescription=""/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contactPhoto"
        android:layout_toEndOf="@+id/contactPhoto"
        android:layout_toLeftOf="@+id/addContactButton"
        android:layout_toStartOf="@+id/addContactButton"
        android:textDirection="rtl"
        android:text="Contact Name" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contactPhoto"
        android:layout_toEndOf="@+id/contactPhoto"
        android:layout_toLeftOf="@+id/addContactButton"
        android:layout_toStartOf="@+id/addContactButton"
        android:layout_below="@+id/contact_name"
        android:textDirection="rtl"
        android:text="Phone Number" />

    <!-- TODO: RESOLVE THIS! Temporarily hide -->
    <!--added in pro support-->
    <ImageButton
        android:id="@+id/addContactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:focusable="false"
        android:scaleType="fitCenter"
        android:clickable="false"
        android:src="@drawable/ic_content_new"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:contentDescription=""/>

</RelativeLayout>