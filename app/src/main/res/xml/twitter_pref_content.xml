<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:key="pref_screen_root"
                  android:icon="@mipmap/ic_launcher">

    <PreferenceCategory
        android:key="twitter"
        android:title="@string/twitter">

        <EditTextPreference
            android:key="twitter_address"
            android:hint="@string/type_here"
            android:title="@string/twt_address"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:key="twitter_label_color"
            android:title="@string/color"
            app:colorpicker_showAlpha="false"
            app:colorpicker_showHex="false"
            app:colorpicker_defaultColor="#f00"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:key="twitter_icon_color"
            android:title="@string/color_icons"
            app:colorpicker_showAlpha="false"
            app:colorpicker_showHex="false"
            app:colorpicker_defaultColor="#f00"/>

        <EditTextPreference
            android:key="twitter_label"
            android:hint="@string/type_here"
            android:title="@string/twt_label"/>

        <CheckBoxPreference
            android:key="iftwitter"
            android:title="@string/show"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>
